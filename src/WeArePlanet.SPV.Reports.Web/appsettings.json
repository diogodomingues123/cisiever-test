{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Pagination": {
    "DefaultPageSize": 25
  },
  "HttpClients": {
    "Webhooks": {
      "Timeout": "00:00:20"
    }
  },
  "Mongo": {
    "DatabaseName": "reports",
    "Timeout": "00:00:05"
  },
  "Hangfire": {
    "DatabaseName": "hangfire",
    "QueuePollInterval": "00:00:10",
    "DatabaseTimeout": "00:00:05",
    "RetryWrites": false,
    "SupportsCappedCollection": false,
    "DisplayStorageConnectionString": true,
    "Dashboard": {
      "Enabled": true,
      "RequireAuthentication": true
    }
  },
  "Documentation": {
    "OpenApiSpecUrl": "/docs/v1/openapi.yml",
    "Swagger": {
      "Enabled": true
    },
    "Redoc": {
      "Enabled": true,
      "RoutePrefix": "docs"
    }
  }
}
